<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="DataGrid">
    <Setter Property="FontFamily" Value="{StaticResource MonospaceFont}" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Background" Value="#2B2B2B" />
    <Setter Property="BorderBrush" Value="#3C3F41" />
    <Setter Property="Foreground" Value="#CCCCCC" />
    <Setter Property="HorizontalGridLinesBrush" Value="#3C3F41" />
    <Setter Property="VerticalGridLinesBrush" Value="#3C3F41" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style Selector="DataGridColumnHeader">
    <Setter Property="FontFamily" Value="{StaticResource MonospaceFont}" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Background" Value="#3C3F41" />
    <Setter Property="Foreground" Value="#BBBBBB" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="BorderBrush" Value="#4C5052" />
    <Setter Property="BorderThickness" Value="0,0,1,1" />
    <Setter Property="Padding" Value="8,4" />
  </Style>

  <Style Selector="DataGridRow">
    <Setter Property="FontFamily" Value="{StaticResource MonospaceFont}" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="#3C3F41" />
    <Setter Property="BorderThickness" Value="0,0,0,1" />
  </Style>

  <Style Selector="DataGridRow:pointerover">
    <Setter Property="Background" Value="#313335" />
  </Style>

  <Style Selector="DataGridRow:selected">
    <Setter Property="Background" Value="#2E6F95" />
    <Setter Property="Foreground" Value="#FFFFFF" />
  </Style>

  <Style Selector="DataGridCell">
    <Setter Property="FontFamily" Value="{StaticResource MonospaceFont}" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Padding" Value="8,2" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

</Styles>
